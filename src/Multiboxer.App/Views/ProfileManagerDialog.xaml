<Window x:Class="Multiboxer.App.Views.ProfileManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Profiles"
        Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Profile List -->
        <ListView x:Name="ProfilesListView"
                  Grid.Row="0"
                  Grid.Column="0"
                  Margin="0,0,16,0"
                  SelectionMode="Single"
                  SelectionChanged="ProfilesListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Game" Width="120" DisplayMemberBinding="{Binding Game}" />
                    <GridViewColumn Header="Executable" Width="150" DisplayMemberBinding="{Binding Executable}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="0" Grid.Column="1" Width="100">
            <Button x:Name="NewButton"
                    Content="New"
                    Margin="0,0,0,8"
                    Padding="8,6"
                    Click="New_Click" />
            <Button x:Name="EditButton"
                    Content="Edit"
                    Margin="0,0,0,8"
                    Padding="8,6"
                    IsEnabled="False"
                    Click="Edit_Click" />
            <Button x:Name="DuplicateButton"
                    Content="Duplicate"
                    Margin="0,0,0,8"
                    Padding="8,6"
                    IsEnabled="False"
                    Click="Duplicate_Click" />
            <Button x:Name="DeleteButton"
                    Content="Delete"
                    Margin="0,0,0,24"
                    Padding="8,6"
                    IsEnabled="False"
                    Click="Delete_Click" />

            <Separator Margin="0,0,0,24" />

            <Button x:Name="ImportButton"
                    Content="Import..."
                    Margin="0,0,0,8"
                    Padding="8,6"
                    Click="Import_Click" />
            <Button x:Name="ExportButton"
                    Content="Export..."
                    Margin="0,0,0,8"
                    Padding="8,6"
                    IsEnabled="False"
                    Click="Export_Click" />
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Content="Close"
                HorizontalAlignment="Right"
                Margin="0,16,0,0"
                Padding="24,8"
                Click="Close_Click" />
    </Grid>
</Window>
