<Window x:Class="Multiboxer.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EQBZ Multiboxer"
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/icon.ico"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1a1a1a" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="Assets/logo.png" Height="40" Margin="0,0,12,0" />
                    <TextBlock Text="EQBZ Multiboxer"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center" />
                    <TextBlock Text="v1.0"
                               FontSize="12"
                               Foreground="#888888"
                               Margin="8,0,0,0"
                               VerticalAlignment="Bottom"
                               Padding="0,0,0,4"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="StatusText"
                               Text="Ready"
                               Foreground="#BBDEFB"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="16">
            <!-- Launcher Tab -->
            <TabItem Header="Launcher">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Launch Settings (Profile + Layout + Monitor) -->
                    <GroupBox Grid.Row="0" Header="Launch Settings">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Profile -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Profile" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <ComboBox x:Name="ProfileComboBox"
                                          DisplayMemberPath="Name"
                                          SelectedIndex="0" />
                            </StackPanel>

                            <!-- Layout -->
                            <StackPanel Grid.Column="1" Margin="8,0">
                                <TextBlock Text="Window Layout" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <ComboBox x:Name="LaunchLayoutComboBox"
                                          SelectionChanged="LaunchLayoutComboBox_SelectionChanged" />
                            </StackPanel>

                            <!-- Monitor -->
                            <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                <TextBlock Text="Target Monitor" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <ComboBox x:Name="LaunchMonitorComboBox"
                                          SelectionChanged="LaunchMonitorComboBox_SelectionChanged" />
                            </StackPanel>

                            <!-- Options Row -->
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,8,0,0">
                                <CheckBox x:Name="LaunchBorderlessCheckBox"
                                          Content="Borderless"
                                          IsChecked="True"
                                          ToolTip="Remove window borders for cleaner layout" />
                                <CheckBox x:Name="LaunchAutoLayoutCheckBox"
                                          Content="Auto-apply layout"
                                          IsChecked="True"
                                          Margin="16,0,0,0"
                                          ToolTip="Automatically position windows as they launch" />
                                <Button Content="Manage Profiles..."
                                        Margin="16,0,0,0"
                                        Padding="8,2"
                                        Click="ManageProfiles_Click" />
                                <Button Content="Layout Manager..."
                                        Margin="8,0,0,0"
                                        Padding="8,2"
                                        Click="LayoutManager_Click" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Slot List -->
                    <GroupBox Grid.Row="1" Header="Active Slots" Margin="0,16,0,0">
                        <ListView x:Name="SlotsListView"
                                  BorderThickness="0"
                                  SelectionMode="Single">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Slot" Width="60" DisplayMemberBinding="{Binding Id}" />
                                    <GridViewColumn Header="Profile" Width="120" DisplayMemberBinding="{Binding ProfileName}" />
                                    <GridViewColumn Header="Window Title" Width="250" DisplayMemberBinding="{Binding WindowTitle}" />
                                    <GridViewColumn Header="State" Width="100" DisplayMemberBinding="{Binding State}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>

                    <!-- Launch Controls -->
                    <StackPanel Grid.Row="2" Margin="0,16,0,0">
                        <!-- Single Launch -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="LaunchButton"
                                    Content="Launch 1"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="Launch_Click"
                                    Width="100" />
                            <Button x:Name="CloseSelectedButton"
                                    Content="Close Selected"
                                    Margin="8,0,0,0"
                                    Click="CloseSelected_Click" />
                            <Button x:Name="CloseAllButton"
                                    Content="Close All"
                                    Margin="8,0,0,0"
                                    Click="CloseAll_Click" />
                            <Separator Margin="16,0,8,0" />
                            <Button x:Name="AttachWindowButton"
                                    Content="Attach Existing..."
                                    Foreground="Gray"
                                    FontSize="11"
                                    Padding="8,4"
                                    Click="AttachWindow_Click"
                                    ToolTip="Manually attach an existing window (usually not needed)" />
                        </StackPanel>

                        <!-- Batch Launch -->
                        <GroupBox Header="Batch Launch (3 second delay between each)" Margin="0,12,0,0">
                            <StackPanel Margin="8">
                                <WrapPanel>
                                    <Button Content="Launch 6"
                                            Click="BatchLaunch_Click"
                                            Tag="6"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button Content="Launch 12"
                                            Click="BatchLaunch_Click"
                                            Tag="12"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button Content="Launch 18"
                                            Click="BatchLaunch_Click"
                                            Tag="18"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button Content="Launch 24"
                                            Click="BatchLaunch_Click"
                                            Tag="24"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button Content="Launch 30"
                                            Click="BatchLaunch_Click"
                                            Tag="30"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button Content="Launch 36"
                                            Click="BatchLaunch_Click"
                                            Tag="36"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button Content="Launch 42"
                                            Click="BatchLaunch_Click"
                                            Tag="42"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button Content="Launch 48"
                                            Click="BatchLaunch_Click"
                                            Tag="48"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button Content="Launch 54"
                                            Click="BatchLaunch_Click"
                                            Tag="54"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button Content="Launch 60"
                                            Click="BatchLaunch_Click"
                                            Tag="60"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button Content="Launch 66"
                                            Click="BatchLaunch_Click"
                                            Tag="66"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button Content="Launch 72"
                                            Click="BatchLaunch_Click"
                                            Tag="72"
                                            Width="80"
                                            Margin="0,0,4,4" />
                                    <Button x:Name="CancelBatchButton"
                                            Content="Cancel"
                                            Click="CancelBatch_Click"
                                            Width="80"
                                            Margin="0,0,4,4"
                                            IsEnabled="False"
                                            Foreground="Red" />
                                </WrapPanel>
                                <TextBlock x:Name="BatchStatusText"
                                           Text=""
                                           Foreground="Gray"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                        </GroupBox>
                        <!-- Apply Layout Button -->
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="Apply Layout Now"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="ApplyLayout_Click"
                                    ToolTip="Apply the selected layout to all active windows" />
                            <TextBlock x:Name="LayoutStatusText"
                                       Text=""
                                       Foreground="Gray"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Hotkeys Tab -->
            <TabItem Header="Hotkeys">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Slot Hotkeys"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />

                    <ListView x:Name="HotkeysListView" Grid.Row="1" BorderThickness="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Slot" Width="60" DisplayMemberBinding="{Binding SlotId}" />
                                <GridViewColumn Header="Action" Width="120" DisplayMemberBinding="{Binding Action}" />
                                <GridViewColumn Header="Hotkey" Width="150" DisplayMemberBinding="{Binding DisplayString}" />
                                <GridViewColumn Header="Enabled" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Enabled}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer Margin="16" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Highlighter Settings -->
                        <GroupBox Header="Highlighter">
                            <StackPanel Margin="8">
                                <CheckBox x:Name="ShowBorderCheckBox"
                                          Content="Show Border on Active Window"
                                          IsChecked="True"
                                          Checked="HighlighterSetting_Changed"
                                          Unchecked="HighlighterSetting_Changed" />
                                <CheckBox x:Name="ShowNumberCheckBox"
                                          Content="Show Slot Number on Background Windows"
                                          IsChecked="True"
                                          Margin="0,8,0,0"
                                          Checked="HighlighterSetting_Changed"
                                          Unchecked="HighlighterSetting_Changed" />
                            </StackPanel>
                        </GroupBox>

                        <!-- Performance Settings -->
                        <GroupBox Header="Performance" Margin="0,16,0,0">
                            <StackPanel Margin="8">
                                <CheckBox x:Name="LockAffinityCheckBox"
                                          Content="Lock CPU Affinity (pin each slot to a different core)" />
                                <CheckBox x:Name="SmoothResizeCheckBox"
                                          Content="Smooth window resize (minimize flicker)"
                                          IsChecked="True"
                                          Margin="0,8,0,0" />
                                <CheckBox x:Name="DelayLayoutCheckBox"
                                          Content="Delay layout after launch (helps with game initialization)"
                                          IsChecked="True"
                                          Margin="0,8,0,0" />
                            </StackPanel>
                        </GroupBox>

                        <!-- Import/Export -->
                        <GroupBox Header="Import / Export" Margin="0,16,0,0">
                            <StackPanel Margin="8">
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="ExportSettingsButton"
                                            Content="Export Settings..."
                                            Padding="12,6"
                                            Click="ExportSettings_Click" />
                                    <Button x:Name="ImportSettingsButton"
                                            Content="Import Settings..."
                                            Margin="8,0,0,0"
                                            Padding="12,6"
                                            Click="ImportSettings_Click" />
                                </StackPanel>
                                <TextBlock Text="Export or import all settings including profiles and layouts"
                                           Foreground="Gray"
                                           Margin="0,8,0,0" />
                            </StackPanel>
                        </GroupBox>

                        <!-- Startup -->
                        <GroupBox Header="Startup" Margin="0,16,0,0">
                            <StackPanel Margin="8">
                                <CheckBox x:Name="MinimizeToTrayCheckBox"
                                          Content="Minimize to system tray instead of taskbar"
                                          IsChecked="True" />
                                <CheckBox x:Name="StartMinimizedCheckBox"
                                          Content="Start minimized"
                                          Margin="0,8,0,0" />
                            </StackPanel>
                        </GroupBox>

                        <!-- About -->
                        <GroupBox Header="About" Margin="0,16,0,0">
                            <StackPanel Margin="8">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Assets/logo.png" Height="48" Margin="0,0,12,0" />
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="EQBZ Multiboxer v1.0" FontWeight="SemiBold" FontSize="14" />
                                        <TextBlock Text="EverQuest Multiboxing Made Easy"
                                                   Foreground="Gray"
                                                   Margin="0,4,0,0" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#E0E0E0" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusBarText"
                           Text="Ready"
                           VerticalAlignment="Center" />

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Active Slots: " VerticalAlignment="Center" />
                    <TextBlock x:Name="ActiveSlotsCount" Text="0" FontWeight="SemiBold" VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
