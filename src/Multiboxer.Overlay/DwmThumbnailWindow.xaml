<Window x:Class="Multiboxer.Overlay.DwmThumbnailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thumbnail"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Black"
        Topmost="False"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="NoResize"
        MouseDown="OnMouseDown">
    <!-- DWM thumbnail renders directly onto the window client area -->
    <!-- The Border is for optional visual border around the thumbnail -->
    <Border x:Name="ThumbnailBorder"
            Background="Transparent"
            BorderBrush="#FF00FF00"
            BorderThickness="0"
            CornerRadius="0">
        <Grid>
            <TextBlock x:Name="SlotLabel"
                       Text=""
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="4"
                       Visibility="Collapsed">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="1" Color="Black" BlurRadius="2"/>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>
    </Border>
</Window>
