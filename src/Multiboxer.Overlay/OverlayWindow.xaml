<Window x:Class="Multiboxer.Overlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multiboxer Overlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        IsHitTestVisible="False"
        ResizeMode="NoResize">

    <Grid>
        <!-- Border overlay (red border when foreground) -->
        <Border x:Name="HighlightBorder"
                BorderThickness="3"
                BorderBrush="#FFFF0000"
                Background="Transparent"
                Visibility="Hidden" />

        <!-- Slot number overlay (shown when background) -->
        <Border x:Name="SlotNumberBorder"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="5"
                Padding="8,4"
                Background="#CC000000"
                BorderBrush="White"
                BorderThickness="2"
                CornerRadius="4"
                Visibility="Hidden">
            <TextBlock x:Name="SlotNumberText"
                       Text="1"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       FontFamily="Segoe UI" />
        </Border>
    </Grid>
</Window>
